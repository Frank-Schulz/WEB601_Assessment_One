<%-include('partials/header');-%>

<h1>Home page</h1>
<p><%= startContent%></p>
<%console.log(products);%>

<% products.forEach(function(product){ %>
    <% if (product.live) { %>
        <h3><%=product.name%></h3>
        <p><%= product.description.substring(0,80) + "..."%>
            <a href="/products/<%=product._id%>">Keep reading!</a>
        </p>
    <% } %>
<% }) %>

<%-include('partials/footer');-%>
